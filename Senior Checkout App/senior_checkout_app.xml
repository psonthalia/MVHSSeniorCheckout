    <pathelement location="${basedir}/../Senior_Checkout/out/production/Senior_Checkout/jaf-1.1.1/activation.jar"/>
  </path>
  
  <path id="library.javax.mail.classpath">
    <pathelement location="${basedir}/../Senior_Checkout/out/production/Senior_Checkout/javax.mail.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
