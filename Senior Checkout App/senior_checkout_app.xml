    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/module_javafxapplication.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.javafxapplication, clean.artifact.javafxapplication" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.javafxapplication" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.javafxapplication" value="${basedir}/../../Desktop"/>
    <property name="artifact.output.javafxapplication:jar" value="${basedir}/../../Desktop"/>
    <property name="artifact.output.senior" value="${basedir}/../../Desktop"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.JavaFxApplication" value="${artifacts.temp.dir}/JavaFxApplication.jar"/>
    <property name="temp.jar.path.JavaFxApplication.jar" value="${artifacts.temp.dir}/1/JavaFxApplication.jar"/>
    <mkdir dir="${artifacts.temp.dir}/1"/>
    <property name="temp.jar.path.Senior.jar" value="${artifacts.temp.dir}/Senior.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.9}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.javafxapplication" description="clean JavaFxApplication artifact output">
    <delete dir="${artifact.output.javafxapplication}"/>
  </target>
  
  <target name="artifact.javafxapplication" depends="init.artifacts, compile.module.javafxapplication" description="Build &#39;JavaFxApplication&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.javafxapplication}"/>
    <copy todir="${artifact.temp.output.JavaFxApplication}">
      <fileset dir="${javafxapplication.output.dir}"/>
    </copy>
    <copy file="${basedir}/src/Main.java" tofile="${artifact.temp.output.JavaFxApplication}/Main.java"/>
    <copy file="${basedir}/src/UpdateLabel.java" tofile="${artifact.temp.output.JavaFxApplication}/UpdateLabel.java"/>
    <fx:fileset id="all_but_JavaFxApplication" dir="${artifact.temp.output.JavaFxApplication}" includes="**/*.jar">
      <exclude name="JavaFxApplication.jar"/>
    </fx:fileset>
    <fx:fileset id="all_JavaFxApplication" dir="${artifact.temp.output.JavaFxApplication}" includes="**/*.jar"/>
    <fx:application id="JavaFxApplication_id" name="JavaFxApplication" mainClass="Main"/>
    <fx:jar destfile="${artifact.temp.output.JavaFxApplication}/JavaFxApplication.jar">
      <fx:application refid="JavaFxApplication_id"/>
      <fileset dir="${artifact.temp.output.JavaFxApplication}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_JavaFxApplication"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value=""/>
        <attribute name="Implementation-Version" value=""/>
        <attribute name="Implementation-Vendor" value=""/>
      </manifest>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.JavaFxApplication}/deploy" outfile="JavaFxApplication">
      <fx:application refid="JavaFxApplication_id"/>
      <fx:resources>
        <fx:fileset refid="all_JavaFxApplication"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.javafxapplication}">
      <fileset dir="${artifact.temp.output.JavaFxApplication}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.JavaFxApplication}"/>
    </delete>
  </target>
  
  <target name="artifact.javafxapplication:jar" depends="init.artifacts, compile.module.javafxapplication" description="Build &#39;JavaFxApplication:jar&#39; artifact">
    <property name="artifact.temp.output.javafxapplication:jar" value="${artifacts.temp.dir}/JavaFxApplication_jar"/>
    <mkdir dir="${artifact.temp.output.javafxapplication:jar}"/>
    <jar destfile="${temp.jar.path.JavaFxApplication.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${javafxapplication.output.dir}"/>
      <zipfileset src="${basedir}/../Senior_Checkout/out/production/Senior_Checkout/jaf-1.1.1/activation.jar"/>
      <zipfileset src="${basedir}/../Senior_Checkout/out/production/Senior_Checkout/javax.mail.jar"/>
      <zipfileset file="${basedir}/src/META-INF/MANIFEST.MF"/>
    </jar>
    <copy file="${temp.jar.path.JavaFxApplication.jar}" tofile="${artifact.temp.output.javafxapplication:jar}/JavaFxApplication.jar"/>
  </target>
  
  <target name="artifact.senior" depends="init.artifacts" description="Build &#39;Senior&#39; artifact">
    <property name="artifact.temp.output.senior" value="${artifacts.temp.dir}/Senior"/>
    <mkdir dir="${artifact.temp.output.senior}"/>
    <jar destfile="${temp.jar.path.Senior.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset file="${basedir}/../Senior_Checkout/out/production/Senior_Checkout/jaf-1.1.1/activation.jar"/>
      <zipfileset file="${basedir}/../Senior_Checkout/out/production/Senior_Checkout/javax.mail.jar"/>
      <zipfileset file="${idea.home}/bin/META-INF/MANIFEST.MF" prefix="META-INF"/>
      <zipfileset file="${basedir}/src/Main.java"/>
      <zipfileset file="${basedir}/src/UpdateLabel.java"/>
    </jar>
    <copy file="${temp.jar.path.Senior.jar}" tofile="${artifact.temp.output.senior}/Senior.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.javafxapplication, artifact.javafxapplication:jar, artifact.senior" description="Build all artifacts">
    <mkdir dir="${artifact.output.javafxapplication:jar}"/>
    <copy todir="${artifact.output.javafxapplication:jar}">
      <fileset dir="${artifact.temp.output.javafxapplication:jar}"/>
    </copy>
    <mkdir dir="${artifact.output.senior}"/>
    <copy todir="${artifact.output.senior}">
      <fileset dir="${artifact.temp.output.senior}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>